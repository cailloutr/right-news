<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.RightNews.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="materialThemeOverlay">@style/ThemeOverlay.RightNews.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.RightNews.Headline6</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.RightNews.Subtitle1</item>
    </style>

    <style name="Widget.RightNews.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="titleTextAppearance">@style/TextAppearance.RightNews.Headline6</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.RightNews.Subtitle1</item>
    </style>

    <style name="Widget.RightNews.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.RightNews.FloatingActionButton</item>
    </style>

    <style name="ThemeOverlay.RightNews.FloatingActionButton" parent="">
        <item name="colorSecondary">@color/color_primary_90</item>
        <item name="colorOnSecondary">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.RightNews.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="android:textColor">@color/chip_text_selector</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:textAppearance">@style/TextAppearance.RightNews.Body2</item>
    </style>

    <style name="ThemeOverlay.RightNews.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">?attr/colorSurface</item>
        <item name="chipStrokeColor">@color/color_primary_90</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="android:textColor">@color/color_primary_90</item>
        <item name="android:textAppearance">@style/TextAppearance.RightNews.Body2</item>
    </style>

    <style name="Widget.RightNews.SearchBar" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">@color/color_on_surface_10</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/search_bar_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/search_bar_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/search_bar_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/search_bar_radius</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextAppearance.RightNews.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
